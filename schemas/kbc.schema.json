{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "type":"object",
  "properties":{
    "credentialSubject":{
      "type":"object",
      "properties":{
        "id":{
          "type":"string",
          "pattern":"^did:[a-z0-9]+:([a-zA-Z0-9.-_:]|%[0-9A-Fa-f]{2})+$"
        }
      },
      "required":[
        "id"
      ]
    },
    "id":{
      "type":"string",
      "format":"uri"
    },
    "issuer":{
      "type":"string",
      "pattern":"^did:[a-z0-9]+:([a-zA-Z0-9.-_:]|%[0-9A-Fa-f]{2})+$"
    },
    "issuanceDate":{
      "type":"string",
      "format":"date-time"
    },
    "expirationDate":{
      "type":"string",
      "format":"date-time"
    },
    "credentialSchema":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "id":{
            "type":"string",
            "format":"uri"
          },
          "type":{
            "type":"string",
            "const":"JsonSchema"
          }
        },
        "required":[
          "id",
          "type"
        ]
      }
    }
  },
  "required":[
    "credentialSubject",
    "id",
    "issuer",
    "issuanceDate",
    "expirationDate",
    "credentialSchema"
  ]
}