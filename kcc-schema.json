{
   "$schema":"https://json-schema.org/draft/2020-12/schema",
   "type":"object",
   "properties":{
      "credentialSubject":{
         "type":"object",
         "properties":{
            "id":{
               "type":"string",
               "pattern":"^did:[a-z0-9]+:[a-zA-Z0-9.-_:]+$"
            },
            "country_of_residence":{
               "type":"string",
               "pattern":"^[A-Z]{2}$"
            },
            "tier":{
               "type":"string"
            }
         },
         "required":[
            "id",
            "country_of_residence"
         ]
      },
      "issuer":{
         "type":"string",
         "pattern":"^did:[a-z0-9]+:[a-zA-Z0-9.-_:]+$"
      },
      "issuanceDate":{
         "type":"string",
         "format":"date-time"
      },
      "expirationDate":{
         "type":"string",
         "format":"date-time"
      },
      "credentialSchema":{
         "type":"object",
         "properties":{
            "id":{
               "type":"string",
               "format":"uri"
            },
            "type":{
               "type":"string",
               "const":"JsonSchema"
            }
         },
         "required":[
            "id",
            "type"
         ]
      },
      "evidence":{
         "type":"array",
         "items":{
            "type":"object",
            "properties":{
               "kind":{
                  "type":"string"
               },
               "checks":{
                  "type":"array",
                  "items":{
                     "type":"string"
                  }
               }
            }
         }
      }
   },
   "required":[
      "credentialSubject",
      "issuer",
      "issuanceDate",
      "expirationDate",
      "credentialSchema"
   ]
}
